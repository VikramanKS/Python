def trans1():
  date= input("Enter the Date:")
  amount1= int(input("Enter the Amount to withdraw:"))
  location=  input("Enter the location:")
  balanceamount = 25000-amount1 
  return("Amount of {} was withdrawm @ {} on {} and balance {}.".format(amount1,location,date,balanceamount))
  
  File Handling part
  #Creating text file in name of sms-bank
  f = open('sms-bank','x')
  #Calling the fucntion in the file
  f.write(str(trans1()))
  #Closing the file
  f.close()
